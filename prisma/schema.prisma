datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vehicle {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  make        String
  model       String
  year        Int
  price       Float
  mileage     Int
  description String?
  imageUrls   String[]
  features    String[]
  status      String   @default("available")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}